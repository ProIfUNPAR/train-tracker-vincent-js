<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingBottom="10dp"
        android:id="@+id/info"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lJarak"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/velocity"
                android:text="@string/initial_speed"
                android:textColor="@color/white"
                android:textSize="@dimen/jarak_size"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/line"
                style="?android:attr/listSeparatorTextViewStyle"
                android:paddingTop="5dip"
                android:gravity="center_horizontal"
                android:layout_below="@+id/connect_help"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jarak"
                android:text="Gambir"
                android:textColor="@color/white"
                android:textSize="@dimen/jarak_size"
                android:gravity="center"
                android:id="@+id/namaJalan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaJalan"
                android:textColor="@color/white"
                android:text="SPEED"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow"
            android:layout_alignRight="@+id/lJarak"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Estimation "
            android:gravity="center"
            android:paddingTop="10dp"
            android:id="@+id/TimeE"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17 m "
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_above="@id/TimeE"
            android:id="@+id/TimeR"
            />

        <TextView
            android:id="@+id/line2"
            style="?android:attr/listSeparatorTextViewStyle"
            android:paddingTop="5dip"
            android:gravity="center_horizontal"
            android:layout_above="@id/TimeE"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            />

        <!--<TextView-->
            <!--android:id="@+id/velocity"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/info"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="19dp"-->
            <!--android:text="@string/initial_speed"-->
            <!--android:textSize="@dimen/ukuran_judul_notif"/>-->


</RelativeLayout>