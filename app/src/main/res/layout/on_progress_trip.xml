<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingBottom="20dp"
        android:id="@+id/info"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lJarak"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:id="@+id/velocity"
                android:text="@string/initial_speed"
                android:textColor="@color/white"
                android:textSize="@dimen/jarak_size"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/line"
                style="?android:attr/listSeparatorTextViewStyle"
                android:paddingTop="5dip"
                android:gravity="center_horizontal"
                android:layout_below="@+id/connect_help"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_below="@+id/jarak"
                android:text="Stasiun Selanjutnya : "
                android:textColor="@color/white"
                android:textSize="@dimen/jarak_size"
                android:gravity="center"
                android:id="@+id/stasiunSelanjutnya"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_below="@+id/stasiunAwal"
                android:text="Stasiun Akhir : "
                android:textColor="@color/white"
                android:textSize="@dimen/jarak_size"
                android:gravity="center"
                android:id="@+id/stasiunAkhir"
                />


        </LinearLayout>

        <!--<ImageView-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:src="@drawable/arrow"-->
            <!--android:layout_alignRight="@+id/lJarak"-->
            <!--android:layout_centerVertical="true"-->
            <!--/>-->


    </RelativeLayout>

    <TextView
        android:id="@+id/TimeE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Estimasi Waktu   "
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextStationEstimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/line2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Stasiun selanjutnya : " />

    <TextView
        android:id="@+id/finalStationEstimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nextStationEstimation"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Stasiun akhir : " />

    <TextView
        android:id="@+id/line2"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:paddingTop="5dip" />

    <!--<TextView-->
    <!--android:id="@+id/velocity"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/info"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="19dp"-->
    <!--android:text="@string/initial_speed"-->
    <!--android:textSize="@dimen/ukuran_judul_notif"/>-->


</RelativeLayout>